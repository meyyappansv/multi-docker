{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "msevugan/multi-client",
            "hostname": "client",
            "essential": false

        },
        {
            "name": "server",
            "image": "msevugan/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "msevugan/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "msevugan/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 8085,
                    "containerPort": 80

                }
            ],
            "links": ["client","server"]
        }

    ]
}